<% content_for :page_title do %><%= @pad.name %><% end %>

<% form_for :pad, url(:pad, :edit, :id => @pad.id) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= field_errors :name, @pad %>

  <%= f.submit "Save" %>
  <%= link_to "Delete pad", url(:pad, :delete, {:id => @pad.id}), :class => "red" %>
<% end %>


