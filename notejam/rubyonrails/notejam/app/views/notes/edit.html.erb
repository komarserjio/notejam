<% content_for :page_title do %><%= @current_name %><% end %>

<%= form_for :note, :html => {:class => "note"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= field_errors :name, @note %>

  <%= f.label :text %>
  <%= f.text_area :text %>
  <%= field_errors :text, @note %>

  <%= f.label :pad %>
  <%= f.select(:pad_id, [['---------', 0]] + current_user.pads.collect { |p| [p.name, p.id]}) %>

  <%= f.submit "Save" %>
<% end %>
